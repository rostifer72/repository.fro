<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="Module">
        <setting label="Module Choice" type="lsep" />
        <setting id="module.provider" label="Choose Module Scraper" type="action" option="close" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=ModuleChoice)" default="Tikiscrapers" />
        <setting label="Import/Remove External Modules" type="lsep" />
        <setting label="- Import an External Module Scraper" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=activateExternalscrapers)" />
        <setting label="- Remove an External Module Scraper" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=removeExternalscrapers)" />
    </category>
    <category label="All Providers">
        <setting label="Enable/Disable All" type="lsep" />
        <setting label="Enable All Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=toggleAll&amp;folder=all&amp;setting=true&amp;open_id=1.1)" option="close"/>
        <setting label="Disable All Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=toggleAll&amp;folder=all&amp;setting=false&amp;open_id=1.2)" option="close"/>
        <setting type="sep" />
        <setting label="Enable/Disable Specific" type="lsep" />
        <setting label="Enable/Disable Specific Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=enableDisableScrapers&amp;folder=all&amp;open_id=1.5)" option="close"/>
    </category>

    <category label="Debrid Only">
        <setting label="Enable/Disable All" type="lsep" />
        <setting label="Enable All Debrid Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=toggleAll&amp;folder=en_DebridOnly&amp;setting=true&amp;open_id=2.1)" option="close"/>
        <setting label="Disable All Debrid Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=toggleAll&amp;folder=en_DebridOnly&amp;setting=false&amp;open_id=2.2)" option="close"/>
        <setting type="sep" />
        <setting label="Enable/Disable Specific" type="lsep" />
        <setting label="Enable/Disable Specific Debrid Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=enableDisableScrapers&amp;folder=en_DebridOnly&amp;open_id=2.5)" option="close"/>
    </category>
    <category label="Torrent Only">
        <setting label="Enable/Disable All" type="lsep" />
        <setting label="Enable All Torrent Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=toggleAll&amp;folder=en_Torrent&amp;setting=true&amp;open_id=3.1)" option="close"/>
        <setting label="Disable All Torrent Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=toggleAll&amp;folder=en_Torrent&amp;setting=false&amp;open_id=3.2)" option="close"/>
        <setting type="sep" />
        <setting label="Enable/Disable Specific" type="lsep" />
        <setting label="Enable/Disable Specific Torrent Providers" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=enableDisableScrapers&amp;folder=en_Torrent&amp;open_id=3.5)" option="close"/>
    </category>
    <category label="Accounts">
        <setting label="Ororo" type="lsep" />
        <setting type="sep" />
        <setting id="ororo.user" type="text" label="User" default="" />
        <setting id="ororo.pass" type="text" option="hidden" label="Password" default="" />
    </category>
    <category label="Cache">
        <setting label="Clear Cache" type="lsep" />
        <setting label="Clear tikiscrapers Results Cache" type="action" action="RunPlugin(plugin://script.module.tikiscrapers/?mode=clearProviderCache)" option="close"/>
    </category>
</settings>
