<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>8</defaultcontrol>
    <controls>
        <control type="videowindow" id="20">
            <description>videowindow</description>
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <visible>Player.HasVideo</visible>
        </control>
        <control type="group">
            <visible>!Player.HasVideo</visible>
            <include>CommonBackground</include>
        </control>
        <control type="image">
            <description>Overlay</description>
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
            <include>dialogeffect</include>
        </control>
        <control type="button">
            <description>Close Window button</description>
            <left>150r</left>
            <top>0</top>
            <width>96</width>
            <height>48</height>
            <label></label>
            <font></font>
            <onclick>PreviousMenu</onclick>
            <texturefocus>DialogCloseButton-focus.png</texturefocus>
            <texturenofocus>DialogCloseButton.png</texturenofocus>
            <onleft>1</onleft>
            <onright>1</onright>
            <onup>1</onup>
            <ondown>1</ondown>
            <visible>system.getbool(input.enablemouse)</visible>
        </control>
        <control type="mover" id="8">
            <description>top left mover</description>
            <left>0</left>
            <top>0</top>
            <width>192</width>
            <height>192</height>
            <texturefocus colordiffuse="$VAR[ColorHighlightVar]">CalibrateTopLeft.png</texturefocus>
            <texturenofocus></texturenofocus>
        </control>
        <control type="mover" id="9">
            <description>right bottom mover</description>
            <left>1050</left>
            <top>750</top>
            <width>192</width>
            <height>192</height>
            <texturefocus colordiffuse="$VAR[ColorHighlightVar]">CalibrateBottomRight.png</texturefocus>
            <texturenofocus></texturenofocus>
        </control>
        <control type="mover" id="10">
            <description>subtitle position mover</description>
            <left>300</left>
            <top>750</top>
            <width>768</width>
            <height>192</height>
            <texturefocus colordiffuse="$VAR[ColorHighlightVar]">CalibrateSubtitles.png</texturefocus>
            <texturenofocus></texturenofocus>
        </control>
        <control type="resize" id="11">
            <description>pixel aspect ratio box</description>
            <left>0</left>
            <top>348</top>
            <width>384</width>
            <height>384</height>
            <texturefocus colordiffuse="$VAR[ColorHighlightVar]">CalibratePixelRatio.png</texturefocus>
            <texturenofocus></texturenofocus>
        </control>
        <control type="group">
            <left>30</left>
            <top>120</top>
            <control type="label" id="2">
                <description>coordinates label</description>
                <left>0</left>
                <top>15</top>
                <width>1860</width>
                <label></label>
                <align>center</align>
                <font>font13</font>
            </control>
            <control type="label" id="3">
                <description>help information</description>
                <left>0</left>
                <top>60</top>
                <width>1860</width>
                <label></label>
                <align>center</align>
                <font>font13</font>
            </control>
        </control>
    </controls>
</window>
