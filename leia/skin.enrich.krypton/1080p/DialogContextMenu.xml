<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>1000</defaultcontrol>
    <include>dialogeffect</include>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        <include>Animation.Common</include>
        <control type="image" id="999">
            <description>background image</description>
            <left>22</left>
            <top>30</top>
            <width>450</width>
            <height>1042</height>
            <texture>black-back.png</texture>
        </control>
        <control type="grouplist" id="996">
            <description>grouplist for context buttons</description>
            <left>22</left>
            <top>45</top>
            <width>450</width>
            <height max="1005">auto</height>
            <itemgap>3</itemgap>
            <focusedcolor>white</focusedcolor>
            <unfocusedcolor>grey3</unfocusedcolor>
        </control>
        <control type="button">
            <description>Close Window button</description>
            <left>390</left>
            <top>8</top>
            <width>96</width>
            <height>48</height>
            <label></label>
            <font></font>
            <onclick>PreviousMenu</onclick>
            <texturefocus>DialogCloseButton-focus.png</texturefocus>
            <texturenofocus>DialogCloseButton.png</texturenofocus>
            <onleft>2</onleft>
            <onright>2</onright>
            <onup>2</onup>
            <ondown>2</ondown>
            <visible>system.getbool(input.enablemouse)</visible>
        </control>
        <control type="button" id="1000">
            <description>button template</description>
            <left></left>
            <top></top>
            <width>450</width>
            <height>57</height>
            <font>fontContextMenu</font>
            <align>center</align>
            <textcolor>grey2</textcolor>
            <focusedcolor>white</focusedcolor>
            <texturefocus colordiffuse="$VAR[ColorHighlightVar]" border="6,6,6,6">common/white.png</texturefocus>
        </control>
        <control type="group">
            <include content="SettingsFocusGradientSolidHack">
                <param name="id">996</param>
                <param name="top">45</param>
                <param name="left">22</param>
                <param name="width">450</param>
                <param name="height">57</param>
                <param name="slide">60</param>
            </include>
        </control>
    </controls>
</window>
