<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu" id="1109">
    <defaultcontrol always="true">9000</defaultcontrol>
    <include>dialogeffect</include>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>
        <control type="grouplist" id="9000">
            <include>Animation.Common</include>
            <left>705</left>
            <top>0</top>
            <width>510</width>
            <height>1080</height>
            <onleft>9000</onleft>
            <onright>9000</onright>
            <onup>9000</onup>
            <ondown>9000</ondown>
            <itemgap>0</itemgap>
            <align>center</align>
            <control type="group" id="1">
                <width>510</width>
                <height>30</height>
                <control type="image">
                    <description>background top image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>30</height>
                    <texture border="30,28,30,0">black-back.png</texture>
                </control>
                <control type="button" id="20">
                    <description>Close Window button</description>
                    <left>390</left>
                    <top>8</top>
                    <width>96</width>
                    <height>48</height>
                    <label></label>
                    <font></font>
                    <onclick>PreviousMenu</onclick>
                    <texturefocus>DialogCloseButton-focus.png</texturefocus>
                    <texturenofocus>DialogCloseButton.png</texturenofocus>
                    <onleft>2</onleft>
                    <onright>13</onright>
                    <onup>13</onup>
                    <ondown>2</ondown>
                    <visible>system.getbool(input.enablemouse)</visible>
                </control>
            </control>
            <control type="button" id="2">
                <description>Exit button</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>Quit()</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>13012</label>
                <visible>System.ShowExitButton</visible>
            </control>
            <control type="button" id="3">
                <description>Shutdown button</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>Powerdown()</onclick>
                <visible>System.CanPowerDown</visible>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>13016</label>
            </control>
            <control type="button" id="4">
                <description>Reboot button</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>Reset()</onclick>
                <visible>System.CanReboot</visible>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>13013</label>
            </control>
            <control type="button" id="5">
                <description>Custom Shutdown Timer</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>AlarmClock(shutdowntimer,Shutdown())</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>20150</label>
                <visible>!System.HasAlarm(shutdowntimer)</visible>
                <visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
            </control>
            <control type="button" id="6">
                <description>Shutdown button</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>ReloadSkin()</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>Reload Skin</label>
            </control>
            <control type="button" id="7">
                <description>Cancel Shutdown Timer</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>CancelAlarm(shutdowntimer)</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>20151</label>
                <visible>System.HasAlarm(shutdowntimer)</visible>
            </control>
            <control type="button" id="8">
                <description>Logoff button</description>
                <width>510</width>
                <height>60</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>dialog.close(all,true)</onclick>
                <onclick>System.LogOff</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>$LOCALIZE[20126] $INFO[system.profilename]</label>
                <visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
                <visible>System.Loggedon</visible>
            </control>
            <control type="togglebutton" id="9">
                <description>Master mode button</description>
                <width>510</width>
                <height>60</height>
                <label>20046</label>
                <altlabel>20045</altlabel>
                <align>center</align>
                <aligny>center</aligny>
                <textwidth>435</textwidth>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <usealttexture>!System.IsMaster</usealttexture>
                <alttexturefocus border="38,8,38,8">button-focus.png</alttexturefocus>
                <alttexturenofocus border="38,8,38,8">ShutdownButtonNoFocus.png</alttexturenofocus>
                <onclick>mastermode</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <visible>System.HasLocks</visible>
            </control>
            <control type="group" id="10">
                <width>510</width>
                <height>105</height>
                <visible>System.HasAlarm(shutdowntimer)</visible>
                <control type="image">
                    <description>background top image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>105</height>
                    <texture border="38,8,38,8">black-back.png</texture>
                </control>
                <control type="textbox">
                    <left>38</left>
                    <top>33</top>
                    <width>435</width>
                    <height>72</height>
                    <font>font12</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>center</align>
                    <label>$LOCALIZE[31329] [B]$INFO[System.Alarmpos][/B]</label>
                </control>
            </control>
            <control type="button" id="11">
                <description>Inhibit idle shutdown</description>
                <width>510</width>
                <height>60</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>InhibitIdleShutdown(true)</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>13017</label>
                <visible>System.HasShutdown +!System.IsInhibit</visible>
            </control>
            <control type="button" id="12">
                <description>Allow idle shutdown</description>
                <width>510</width>
                <height>60</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>InhibitIdleShutdown(false)</onclick>
                <pulseonselect>no</pulseonselect>
                <font>font16</font>
                <label>13018</label>
                <visible>System.HasShutdown + System.IsInhibit</visible>
            </control>
            <control type="image" id="13">
                <description>background bottom image</description>
                <left>0</left>
                <width>510</width>
                <height>30</height>
                <texture border="30,0,28,30">black-back.png</texture>
            </control>
        </control>
    </controls>
</window>
