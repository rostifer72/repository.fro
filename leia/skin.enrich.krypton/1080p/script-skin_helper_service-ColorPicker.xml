<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <controls>
        <include>CommonBackground2</include>
        <control type="image">
            <include>Floor_Animation</include>
            <left>0</left>
            <top>150r</top>
            <width>1920</width>
            <height>150</height>
            <texture>floor.png</texture>
            <include>VisibleFadeEffect</include>
        </control>
        <include content="CommonWindowHeader">
            <param name="Icon" value="icon_system" />
            <param name="Label" value="Pick a Colour" />
        </include>
        <control type="group">
            <left>30</left>
            <top>45</top>
            <include>Animation.Common</include>
            <control type="image">
                <left>8</left>
                <top>8</top>
                <width>1852</width>
                <height>945</height>
                <texture border="22">ContentPanel.png</texture>
            </control>
            <control type="image">
                <left>8</left>
                <top>938</top>
                <width>1830</width>
                <height>96</height>
                <texture border="22">ContentPanelMirror.png</texture>
            </control>
            <control type="button">
                <description>Close Window button</description>
                <left>1665</left>
                <top>16</top>
                <width>96</width>
                <height>48</height>
                <label></label>
                <font></font>
                <onclick>PreviousMenu</onclick>
                <texturefocus>DialogCloseButton-focus.png</texturefocus>
                <texturenofocus>DialogCloseButton.png</texturenofocus>
                <onleft>1</onleft>
                <onright>1</onright>
                <onup>1</onup>
                <ondown>1</ondown>
                <visible>system.getbool(input.enablemouse)</visible>
            </control>
            <control type="image">
                <description>LOGO</description>
                <left>45</left>
                <top>15</top>
                <width>330</width>
                <height>120</height>
                <aspectratio>keep</aspectratio>
                <texture>special://skin/extras/icon_settings.png</texture>
            </control>
            <control type="image">
                <left>402</left>
                <top>15</top>
                <width>1402</width>
                <height>927</height>
                <texture border="8">black-back2.png</texture>
            </control>
            <control type="label">
                <description>header label</description>
                <left>450</left>
                <top>30</top>
                <width>1089</width>
                <height>45</height>
                <font>font16</font>
                <label>Skin Settings - Pick a Colour</label>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
        </control>
        <control type="group">
            <left>112</left>
            <top>0</top>
            <include>Animation.Common</include>
            <!-- Color picker panel -->
            <control type="panel" id="3110">
                <viewtype label="31438">icons</viewtype>
                <left>345</left>
                <top>135</top>
                <width>1365</width>
                <height>840</height>
                <orientation>vertical</orientation>
                <onleft>3012</onleft>
                <onright>3110</onright>
                <onup>3110</onup>
                <ondown>3110</ondown>
                <preloaditems>4</preloaditems>
                <pagecontrol>60</pagecontrol>
                <itemlayout height="44" width="44" condition="!StringCompare(Window.Property(palettename),basic) + !StringCompare(Window.Property(palettename),material-design)">
                    <control type="image">
                        <width>92%</width>
                        <height>92%</height>
                        <texture border="8">$INFO[ListItem.Icon]</texture>
                    </control>
                </itemlayout>
                <focusedlayout height="44" width="44" condition="!StringCompare(Window.Property(palettename),basic) + !StringCompare(Window.Property(palettename),material-design)">
                    <control type="group">
                        <animation effect="zoom" time="200" tween="sine" easing="inout" start="100" end="120" center="auto">Focus</animation>
                        <control type="image">
                            <width>92%</width>
                            <height>92%</height>
                            <texture border="8">$INFO[ListItem.Icon]</texture>
                        </control>
                    </control>
                </focusedlayout>
                <itemlayout height="75" width="97" condition="StringCompare(Window.Property(palettename),basic)">
                    <control type="image">
                        <width>92%</width>
                        <height>92%</height>
                        <texture border="8">$INFO[ListItem.Icon]</texture>
                    </control>
                </itemlayout>
                <focusedlayout height="75" width="97" condition="StringCompare(Window.Property(palettename),basic)">
                    <control type="group">
                        <animation effect="zoom" time="200" tween="sine" easing="inout" start="100" end="120" center="auto">Focus</animation>
                        <control type="image">
                            <width>92%</width>
                            <height>92%</height>
                            <texture border="8">$INFO[ListItem.Icon]</texture>
                        </control>
                    </control>
                </focusedlayout>
                <itemlayout height="44" width="97" condition="StringCompare(Window.Property(palettename),material-design)">
                    <control type="image">
                        <width>92%</width>
                        <height>92%</height>
                        <texture border="8">$INFO[ListItem.Icon]</texture>
                    </control>
                </itemlayout>
                <focusedlayout height="44" width="97" condition="StringCompare(Window.Property(palettename),material-design)">
                    <control type="group">
                        <animation effect="zoom" time="200" tween="sine" easing="inout" start="100" end="120" center="auto">Focus</animation>
                        <control type="image">
                            <width>92%</width>
                            <height>92%</height>
                            <texture border="8">$INFO[ListItem.Icon]</texture>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
        <control type="group">
            <left>45</left>
            <top>180</top>
            <width>390</width>
            <include>Animation.Common</include>
            <!-- choose color palette -->
            <control type="button" id="3030">
                <top></top>
                <width>390</width>
                <height>120</height>
                <font>font24_title</font>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>right</align>
                <aligny>center</aligny>
                <onup>3011</onup>
                <ondown>3012</ondown>
                <onright>3110</onright>
                <label>Palette: $INFO[Window.Property(palettename)]</label>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]" border="8">MenuItemFO.png</texturefocus>
                <texturenofocus>MenuItemNF.png</texturenofocus>
                <visible>!IsEmpty(Window.Property(palettename))</visible>
            </control>
            <!-- Save button -->
            <control type="button" id="3012">
                <top>116</top>
                <width>390</width>
                <height>120</height>
                <font>font24_title</font>
                <align>right</align>
                <aligny>center</aligny>
                <onup>3030</onup>
                <ondown>3011</ondown>
                <onright>3110</onright>
                <label>190</label>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]" border="8">MenuItemFO.png</texturefocus>
                <texturenofocus>MenuItemNF.png</texturenofocus>
                <!--onclick>Skin.SetString(ColourChoice)</onclick-->
            </control>
        </control>
        <control type="group">
            <include>Animation.Common</include>
            <left>45</left>
            <top>622</top>
            <control type="label">
                <top></top>
                <width>390</width>
                <height>60</height>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
                <font>font24_title</font>
                <label>Color Preview...</label>
            </control>
            <!-- Color preview -->
            <control type="image">
                <top>75</top>
                <left>75</left>
                <width>240</width>
                <height>240</height>
                <aspectratio>stretch</aspectratio>
                <texture border="8">panel.png</texture>
                <colordiffuse>$INFO[Window.Property(colorstring)]</colordiffuse>
            </control>
        </control>
    </controls>
</window>
