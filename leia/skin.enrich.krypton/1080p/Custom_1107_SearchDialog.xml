            <top>-24</top>
            <width>6</width>
            <height>6</height>
            <label></label>
            <font></font>
            <onfocus>down</onfocus>
            <texturefocus></texturefocus>
            <texturenofocus></texturenofocus>
            <onleft>9000</onleft>
            <onright>9000</onright>
            <onup>9000</onup>
            <ondown>Control.SetFocus(2,0)</ondown>
        </control>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>
        <control type="grouplist" id="9060">
            <include>Animation.Common</include>
            <left>705</left>
            <top>0</top>
            <width>525</width>
            <height>1080</height>
            <onleft>9000</onleft>
            <onright>9000</onright>
            <onup>9060</onup>
            <ondown>9060</ondown>
            <itemgap>0</itemgap>
            <align>center</align>
            <control type="group" id="1">
                <width>510</width>
                <height>30</height>
                <control type="image">
                    <description>background top image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>30</height>
                    <texture border="30,28,30,0">black-back.png</texture>
                </control>
                <control type="button" id="20">
                    <description>Close Window button</description>
                    <left>390</left>
                    <top>8</top>
                    <width>96</width>
                    <height>48</height>
                    <label></label>
                    <font></font>
                    <onclick>PreviousMenu</onclick>
                    <texturefocus>DialogCloseButton-focus.png</texturefocus>
                    <texturenofocus>DialogCloseButton.png</texturenofocus>
                    <onleft>2</onleft>
                    <onright>13</onright>
                    <onup>13</onup>
                    <ondown>2</ondown>
                    <visible>system.getbool(input.enablemouse)</visible>
                </control>
            </control>
            <control type="button" id="2">
                <description>Search Video Library</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>Dialog.Close(all)</onclick>
                <onclick condition="!System.HasAddon(script.globalsearch)">InstallAddon(script.globalsearch)</onclick>
                <font>font16</font>
                <onclick>RunScript(script.globalsearch)</onclick>
                <label>$LOCALIZE[1212] $LOCALIZE[14022]</label>
            </control>
            <control type="button" id="3">
                <description>The Movie DB</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>Dialog.Close(all)</onclick>
                <onclick condition="!System.hasAddon(script.extendedinfo)">InstallAddon(script.extendedinfo)</onclick>
                <onclick condition="System.hasAddon(script.extendedinfo)">RunScript(script.extendedinfo,info=moviedbbrowser,search=True)</onclick>
                <font>font16</font>
                <label>The Movie DB</label>
            </control>
            <control type="button" id="4">
                <description>WTF Direct</description>
                <width>510</width>
                <height>90</height>
                <textcolor>grey3</textcolor>
                <focusedcolor>white</focusedcolor>
                <align>center</align>
                <textwidth>435</textwidth>
                <texturefocus colordiffuse="$VAR[ColorHighlightVar]">button-focus.png</texturefocus>
                <texturenofocus border="38,8,38,8">black-back.png</texturenofocus>
                <onclick>Dialog.Close(all)</onclick>
                <onclick>ActivateWindow(Videos,"plugin://plugin.video.whatthefurk/?iconimage=blank&amp;imdb=blank&amp;mode=502&amp;name=Search%20Furk%20(Video)&amp;parms&amp;rootname=blank&amp;start&amp;url=url&amp;videotype",return)</onclick>
