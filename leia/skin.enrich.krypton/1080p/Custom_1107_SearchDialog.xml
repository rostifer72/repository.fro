                <label>Youtube</label>
            </control>
            <control type="image" id="14">
                <description>background bottom image</description>
                <left>0</left>
                <width>510</width>
                <height>30</height>
                <texture border="30,0,28,30">black-back.png</texture>
            </control>
        </control>
    </controls>
